{% extends 'base.twig' %}

{% block content %}
    <form action="/search">
        <input type="search" name="q" value="{{ query|escape('html_attr') }}">
        <input type="submit" value="Search">
    </form>

    <div class="container lg:max-w-screen-lg mx-auto">
        {% if articles %}
            <p>Found <strong>{{ articles|length }}</strong> items:</p>

            <div class="grid grid-cols-2 sm:grid-cols-3 lg:grid-cols-4 gap-4">
                {% for article in articles %}
                    {% include 'partials/article.twig' with {'article': article} only %}
                {% endfor %}
            </div>
        {% else %}
            <p>Sorry! No items matched your search.</p>
        {% endif %}
    </div>
{% endblock %}
