{% extends 'base.twig' %}

{% block content %}
    <form action="/search" class="bg-gray-500">
        <div class="max-w-screen-md mx-auto px-4 py-20">
            <div class="flex flex-row">
                <input type="search" name="q" value=""
                       placeholder="Search..."
                       class="w-full border border-transparent rounded-md py-3 px-4 text-lg font-medium focus:outline-none focus:ring-2 focus:ring-gray-600">
                <input type="submit" value="Search"
                       class="ml-4 bg-yellow-300 rounded-md text-lg text-base font-medium text-gray-600 py-3 px-8">
            </div>
        </div>
    </form>

    <div class="container lg:max-w-screen-lg mx-auto">
        <div class="grid grid-cols-2 sm:grid-cols-3 lg:grid-cols-4 gap-4">
            {% for article in articles %}
                {% include 'partials/article.twig' with {'article': article} only %}
            {% endfor %}
        </div>
    </div>
    <script src="bundle.js"></script>
{% endblock %}
