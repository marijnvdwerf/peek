{% extends 'base.twig' %}

{% block content %}
    <div class="bg-gray-500 h-screen flex flex-col justify-center">
        <h1 class="text-8xl text-yellow-200 py-8 text-center">Peek</h1>
        <form action="/search">
            <div class="max-w-screen-md mx-auto px-4 py-8">
                <div class="flex flex-row">
                    <input type="search" name="q" value=""
                           placeholder="Search..."
                           class="w-full border border-transparent rounded-md py-3 px-4 text-lg font-medium focus:outline-none focus:ring-2 focus:ring-gray-600">
                    <input type="submit" value="Search"
                           class="ml-4 bg-yellow-300 rounded-md text-lg text-base font-medium text-gray-600 py-3 px-8">
                </div>
            </div>
        </form>

        <div class="container lg:max-w-screen-lg mx-auto">
            <h1 class="pb-2 text-lg font-bold">Best deals</h1>
            <div class="grid grid-cols-2 sm:grid-cols-3 lg:grid-cols-4 gap-4 grid-rows-1">
                {% for article in articles[:4] %}
                    {% include 'partials/article.twig' with {'article': article} only %}
                {% endfor %}
            </div>
        </div>
    </div>
{% endblock %}
