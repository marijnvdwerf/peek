{% extends 'base.twig' %}

{% block content %}
    <h1>{{ exception.title }}</h1>
    <dl>
        <dt>Code</dt>
        <dd>{{ exception.code }}</dd>

        <dt>Message</dt>
        <dd>{{ exception.message }}</dd>

        <dt>File</dt>
        <dd>{{ exception.file }}</dd>

        <dt>Line</dt>
        <dd>{{ exception.line }}</dd>
    </dl>

    <h2>Trace</h2>
    <pre><code>{{ exception.traceAsString }}</code></pre>
{% endblock %}
